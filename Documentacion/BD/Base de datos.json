{
  "rules": {
    "players": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('vinculos').child(auth.uid).child($uid).val() === true)",
        ".write": "auth != null && auth.uid === $uid",
        "usage": {
          "$date": {
            ".read": "auth != null && (auth.uid === $uid || root.child('vinculos').child(auth.uid).child($uid).val() === true)",
            ".write": "auth != null && auth.uid === $uid"
          }
        }
      }
    },
    "usernames": {
      ".read": true,
      "$username": {
        ".write": "auth != null && newData.val() === auth.uid && (!data.exists() || data.val() === auth.uid)",
        ".validate": "newData.isString() && newData.val().length > 0"
      }
    },
    "usuarios": {
      "$uid": {
        "profile": {
          ".read": "auth != null && (auth.uid === $uid || root.child('vinculos').child(auth.uid).child($uid).val() === true)",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    "vinculos": {
      "$padreUid": {
        "$hijoUid": {
          ".read": "auth != null && auth.uid === $padreUid",
          ".write": "auth != null && auth.uid === $padreUid && newData.val() === true && root.child('usuarios').child($hijoUid).exists()"
        }
      }
    }
  }
}
